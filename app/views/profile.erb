<% if @error %>
  <p><%= @error %></p>
<% end %>

  <h1><%= @user.email %>'s Profile</h1>

  <% if !@photo %>
    
    <p>Consider uploading a photograph of yourself...</p>

    <form action="/profile/<%= @user.id %>/upload" method="POST" enctype="multipart/form-data">
      <input id="choose-photo-button" type="file" name="image" />
      <input id="choose-photo-button" type="submit" value="Upload!">
    </form>
  <% end %>

  <div id="edit-image">
  <% if @photo %>
    <img class="photo" src="<%= @photo.file %>">
    <a href="/profile/<%= @user.id %>/edit">    Edit image
    </a>
  <% end %>
</div>
  <br>
  <br>

  <a href="/create"><button id="create-survey-button" name="create">Create A New Survey</button></a>
  <br>

  <h3>Your Surveys</h3>
  <div class="created-survey-listing">
    <table>

      <tr>
        <th>
          Survey Name
        </th>
        <th>
          URL
        </th> 
        <% @user.authored_surveys.each do |survey| %>
      </tr> 
      <tr> 
        <td>
          <a href="/survey/<%= survey.id %>/results"><%= survey.name %></a>
        </td>
        <td>
          <a href="/survey/<%= survey.id %>">localhost:9393/survey/<%= survey.id %></a>
        <td>
      </tr>  
   <% end %>
  </table>
