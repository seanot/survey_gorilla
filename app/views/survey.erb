<div id="container">

  <% unless session.id %>
    <p>In order to participate in this survey, you must be logged into your account.  Please login or create a new account.</p>
  <% end %>

  <div id="question">
    
    <h4><%= @survey.name %></h4>
    
    <p><%= @survey.questions.first.question %></p>

    <form action="/survey/:survey_id/results" method="POST">
      <% @question.choices.each do |choice| %>
        <input type="radio" name="choice_1" value="choice_1"><%= choice.choice %><br>
      <% end %>
      <% if session %>
        <input type="submit" value="Submit your response">
      <% end %>
      <a href="/"><button>Cancel</button></a>
    </form>
    
  </div> 

</div>
