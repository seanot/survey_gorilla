<% if @error %>
  <p><%= @error %></p>
<% end %>

  <% if !session[:user_id] %>
    <p>In order to participate in this survey, you must be logged into your account.  Please login or create a new account.</p>
  <% end %>

  <div id="question">
    <h4><%= @survey.name %></h4>
    <% questions_array = @survey.questions %>
  <% questions_array.each do |question| %>
    <p><%= question.question %></p>
    <form action="/survey/<%= @survey.id %>/results" method="POST">
    <% question.choices.each_with_index do |choice,index| %>
      <input type="radio" name="<%=question.id%>" value="<%= choice.id %>"> <%= choice.choice %><br>
      <% end %>
    <%end%>
  </div>
  
      <p><input type="submit" value="Submit your response">
      <a href="/"><button>Cancel</button></a></p>

    </form>

  </div>

</div>
